<div class="custom_section">
  <div id="section_img" class="section_img" style="background-image: url({{ section.settings.bg_image | image_url }});">
    <div class="info">
      <h2 class="heading"> {{ section.settings.custom_title }} </h2>
      <p class="sub_heading">{{ section.settings.custom_subtitle }}</p>
      <a href="{{ section.settings.link }}" class="button bg_btn">{{ section.settings.linktext }}</a>
    </div>
  </div>
</div>

<style>
  .section_img {
  	width:100%;
  	height: 400px;	
  	background-repeat: no-repeat;
      background-size: cover;
      text-align: center;
  }
  .section_img .info {
      padding-top: 80px;
      margin-top: 20px;
  }  
  .section_img .info .heading {
      font-size: 50px;
      margin-bottom: 0;
      color: #000;
  }
  .section_img .info .sub_heading {
      margin-top: 0;
      font-size: 26px;
      color: #000;
  }
  .section_img .info .bg_btn {
    display: inline-block;
    line-height: 46px;
/*     margin-top: 70px; */
    width: 140px;
  }
</style>


{% schema %}
  {
    "name": "Custom Section",
    "settings": [
        {
           "type":"image_picker",
           "label":"Enter your image",
           "id":"bg_image"
         },
          {
          "id": "custom_title",
          "type": "text",
          "label": "Title"
          },
          {
          "id": "custom_subtitle",
          "type": "text",
          "label": "Sub Title"
          },
          {
            "id": "link",
            "type": "url",
            "label": "Button link"
          },
          {
            "id": "linktext",
            "type": "text",
            "label": "Button text"
          }
    ],

    "presets": [
       {
        "name": "custom_section",
        "category": "Custom"
      }
    ]
    
  }
{% endschema %}

